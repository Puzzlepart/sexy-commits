{
  "name": "sexy-commits",
  "version": "0.1.11",
  "description": "Sexy commits using gitmoji.dev and inquirer-autocomplete-prompt",
  "main": "bin/index.js",
  "bin": {
    "sexy-commits": "bin/index.js"
  },
  "scripts": {
    "commit": "node commit.js",
    "postversion": "npx @appnest/readme generate && git add --all && git commit --amend && git push"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Puzzlepart/sexy-commits.git"
  },
  "keywords": [
